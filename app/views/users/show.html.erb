<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message  %></p>
  </div>
<% end %>

  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>GPA:</strong> <%= @user.gpa %></p>
    <p><strong>Athletism:</strong>  <%= @user.athletism %></p>
    <p><strong>Footwork:</strong> <%= @user.footwork %> </p>
    <p><%= link_to 'Edit', edit_user_path(@user) %></p>
    <p><%= link_to 'See schools', schools_path %></p>
  </div>
</div>

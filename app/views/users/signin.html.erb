<%= form_for @user, url: "/users/login" do |f| %>

  <div class="field"><%= f.label :name, "Select your name" %><br>
    <%= f.collection_select(:id, @users, :id, :name) %>
  </div>

  <div class="field"><%= f.label :password %><br>
  <%= f.text_field :password, :placeholder => "Enter your password!" %></div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>

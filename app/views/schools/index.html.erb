<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Minimum GPA</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @schools.each do |school| %>
      <tr>
        <td><img src="http://<%= school.name.gsub(" ", "") %>.jpg.to/" width="100"></td>
        <td><%= school.name %></td>
        <td><%= school.min_gpa %></td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{school.name}", school_path(school) %></td>
        <% else %>
          <td><%= link_to "Go to #{school.name}", school_path(school) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @user %>
  <p>
    <%= link_to "Back to profile", user_path(@user), {:class => "btn btn-primary"} %>
  </p>
<% else %>
  <p><%= link_to 'New Schools', new_school_path %></p>
<% end %>
